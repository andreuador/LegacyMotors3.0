{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 my-5 d-flex justify-content-center">
                <div class="border border-black border-opacity-25 p-3 rounded-2 d-flex flex-column align-items-center">
                    <h2>Registro</h2>
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.name, 'Nombre') }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.lastname, 'Apellidos') }}
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.phone, 'Movil') }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.address, 'Dirección') }}
                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.dni, 'DNI') }}
                            {{ form_widget(form.dni, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.login.username, 'Nombre de Usuario') }}
                            {{ form_widget(form.login.username, {'attr': {'class': 'form-control my-2'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.login.password, 'Contraseña') }}
                            {{ form_widget(form.login.password, {'attr': {'class': 'form-control my-2'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 my-2">
                            <button class="btn btn-success mt-3" type="submit">Registrar</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
