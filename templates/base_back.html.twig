<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Legacy Motors{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/logo_blanc.png') }}">
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% include '_header_back.html.twig' %}
{# FLASH MESAGGE #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    {% endfor %}
{% endfor %}
<main class="container-fluid flex-grow-1">
        <div class="row">
            {% include '_aside_back.html.twig' %}
            {# <aside class="col-sm-2" {{ vue_component('AsideBack_component') }}></aside>#}
            <section class="col-lg-10 col-md-12 my-3">
                {% block body %}
                {% endblock %}
            </section>
        </div>
</main>
{% include '_footer_back.html.twig' %}
</body>
</html>
