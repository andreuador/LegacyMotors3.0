{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 my-5 d-flex justify-content-center">
                <div class="border border-black border-opacity-25 p-3 rounded-2 d-flex flex-column align-items-center">
                    <h2>Iniciar sesión</h2>
                    <form method="post" action="{{ path('app_login') }}">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Usuario"
                                   name="_username">
                            <label for="username">Usuario</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="floatingInput" placeholder="Contraseña"
                                   name="_password">
                            <label for="password">Contraseña</label>
                        </div>
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <button class="btn btn-primary mt-3" type="submit">Iniciar sesión</button>
                    </form>
                    <a href="{{ path('app_register') }}" class="mt-4 text-start">Registrate aquí</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
